<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dtu.projectmanagement.ui.ViewActivitiesController">
    <children>
        <Label text="Activities">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Button fx:id="switchToCreateActivity" mnemonicParsing="false" onAction="#createActivity" text="Create Activity" />
        <Button mnemonicParsing="false" onAction="#switchToDeleteActivity" text="Delete Activity" />
        <Button fx:id="switchToSetDate" mnemonicParsing="false" onAction="#setDateScreen" text="Set Activity Date" />
        <Button fx:id="switchToBudgetedTime" mnemonicParsing="false" onAction="#activityScreen" text="Set budgeted time" />
        <Button fx:id="switchToAssignToActivity" mnemonicParsing="false" onAction="#assignToActivityScreen" text="Assign Employee To An Activity" />
        <Button mnemonicParsing="false" onAction="#returnToLoggedIn" text="Back" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
