<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dtu.projectmanagement.ui.LoginScreenController">
    <children>
        <Label fx:id="loginLabel" text="Login using your initials:" />
      <TextField fx:id="loginTextField" onKeyPressed="#keyListenerLogIn" />
      <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginEmployee" text="Login">
         <effect>
            <DropShadow />
         </effect></Button>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
